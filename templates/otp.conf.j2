#           Modify azavea.opentripplanner/templates/otp.conf.j2 to make changes stick.
description "start OpenTripPlanner process"

start on {{ upstart_start_on }}
stop on runlevel [!2345]

setuid {{ otp_user }}

chdir {{ otp_bin_dir }}
script
    exec /usr/bin/java -Xmx{{otp_process_mem}} -Xverify:none -jar ./otp-core/target/otp.jar -s -p {{ otp_web_port }} -g {{ otp_data_dir }}
end script
